<div class="main-content-banner">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      {% for b in banners %}
        {% if b.status == 1 %}
          {% if loop.first %}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="active"></li>
          {% else %}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}"></li>
          {% endif %}
        {% endif %}
      {% endfor %}
    </ol>
    <div class="carousel-inner">
      {% for b in banners %}
        {% if b.status == 1 %}
          {% if loop.first %}
            <div class="carousel-item active">
              <img class="d-block w-100 banner-image" src="{{ b.url }}" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <div class="{{ b.position }}-button mode-{{ b.mode }}-styling">
                  <p class="banner-title">{{ b.title }}</p>
                  <p>{{ b.desc }}</p>
                </div>
                <div class="button-carousel-link">
                  <a href="{{ b.actionLink }}" target="_blank"><button class="btn btn-secondary">{{ b.btnLabel }}</button></a>
                </div>
              </div>
            </div>
          {% else %}
            <div class="carousel-item">
              <img class="d-block w-100 banner-image" src="{{ b.url }}" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <div class="{{ b.position }}-button mode-{{ b.mode }}-styling">
                  <p class="banner-title">{{ b.title }}</p>
                  <p>{{ b.desc }}</p>
                </div>
                <div class="button-carousel-link">
                  <a href="{{ b.actionLink }}" target="_blank"><button class="btn btn-secondary">{{ b.btnLabel }}</button></a>
                </div>
              </div>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

